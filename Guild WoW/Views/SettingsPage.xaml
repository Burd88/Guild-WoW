                <Label x:Name="RealmLabel" HorizontalTextAlignment="Center" Grid.Row="1" VerticalTextAlignment="Start" Text="{Binding Realm}" TextColor="Black"
                           FontSize="Medium"/>
            </Grid>
        </Grid>
        <Grid >

            <Image Source="Label_back_half" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Aspect="Fill"></Image>
            <Grid>
            <Label Text="Гильдия:" HorizontalTextAlignment="Center" VerticalTextAlignment="End" Grid.Row="0"  TextColor="DarkRed"
                           FontSize="Medium"/>

                <Label HorizontalTextAlignment="Center" VerticalTextAlignment="Start" Grid.Row="1" Text="{Binding GuildName}"  TextColor="Black"
                           FontSize="Medium" />
            </Grid>
        </Grid>
        <Grid >
            <Image Source="Label_back_half" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Aspect="Fill"></Image>
                <Grid>
                <Label Text="Язык:" HorizontalTextAlignment="Center" VerticalTextAlignment="End" Grid.Row="0"  TextColor="DarkRed"
                           FontSize="Medium"/>

            <Label HorizontalTextAlignment="Center" VerticalTextAlignment="Start" Grid.Row="1" Text="{Binding Local}"
                           TextColor="Black"
                           FontSize="Medium" />
            </Grid>
        </Grid>
