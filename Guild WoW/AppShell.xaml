                      ContentTemplate="{DataTemplate views:ActivityPage}" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Настройки"
                      Icon="icon_feed.png" >

        <Tab>
            <ShellContent 
                      ContentTemplate="{DataTemplate views:SettingsPage}" />
        </Tab>
    </FlyoutItem>

